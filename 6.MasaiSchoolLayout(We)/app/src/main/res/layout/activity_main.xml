<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10C522"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMasaiSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/masai_school"
        android:textSize="@dimen/sp_22"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tvHelloWorld"
        android:layout_below="@+id/tvMasaiSchool"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="@dimen/sp_22"
        android:layout_gravity="right"
        android:gravity=""
        android:textColor="#CC3D3D"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvAndroid"
        android:layout_below="@+id/tvHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android"
        android:textSize="@dimen/sp_22"
        android:gravity=""
        android:textColor="#CC3D3D"
        android:textStyle="bold"
        />


</LinearLayout>