<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_20"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAnimalHeading"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/animals"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:layout_centerHorizontal="true"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivAnimalImage"
            android:layout_below="@+id/tvAnimalHeading"
            android:layout_width="124dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dp_20"
            android:src="@drawable/cat" />


        <TextView
            android:id="@+id/tvAnimalName"
            android:layout_width="wrap_content"
            android:text="@string/cat"
            android:layout_below="@+id/ivAnimalImage"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAnimalSound"
            android:layout_width="wrap_content"
            android:text="@string/meows"
            android:layout_below="@+id/tvAnimalName"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>