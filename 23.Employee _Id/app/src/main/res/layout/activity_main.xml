<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_person_24"/>

    <TextView
        style="@style/TexviewAddEmployee"
        android:text="@string/add_new_employee"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextViewDetails"
            android:text="@string/title"/>

        <TextView
            android:id="@+id/tvFirstName"
            style="@style/TextViewDetails"
            android:layout_below="@id/tvTitle"
            android:text="@string/first_name"/>

        <TextView
            android:id="@+id/tvLastName"
            style="@style/TextViewDetails"
            android:layout_below="@id/tvFirstName"
            android:text="@string/last_name"/>

        <TextView
            android:id="@+id/tvWorkEmail"
            style="@style/TextViewDetails"
            android:layout_below="@id/tvLastName"
            android:text="@string/work_email"/>


        <EditText
            android:id="@+id/etTitle"
            style="@style/EditTextDetails"
            android:layout_toEndOf="@id/tvFirstName"
            android:hint="Mr./Mrs."
            />

        <EditText
            android:id="@+id/etFirstName"
            style="@style/EditTextDetails"
            android:layout_toEndOf="@id/tvFirstName"
            android:layout_below="@id/tvTitle"
            android:hint="@string/aditya"
            />

        <EditText
            android:id="@+id/etLastName"
            style="@style/EditTextDetails"
            android:layout_toEndOf="@id/tvFirstName"
            android:layout_below="@id/etFirstName"
            android:hint="@string/cheke"
            />

        <EditText
            style="@style/EditTextDetails"
            android:layout_toEndOf="@id/tvFirstName"
            android:layout_below="@id/etLastName"
            android:hint="@string/dextorlab_pvt_gmail_com"
            />


    </RelativeLayout>



</LinearLayout>